{% extends '@App/base.html.twig' %}

{% block nav %}
    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {% include '@App/partials/navigation.html.twig' %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
            <a href="{{ path('fos_user_security_logout') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>
        {% else %}
            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        {% endif %}
    </div>
{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1><span>{{ 'welkom' | trans }}</span></h1>
            </div>

            <div id="status">
                Dit is het cms voor het blog van irisopavontuur.
            </div>

            <div id="next">
                Log in om een blog toe te voegen, te bewerken en om commentaar toe te beoordelen
            </div>
        </div>
    </div>
{% endblock %}